{
  "manifest_version": 3,
  "name": "YouTube Subtitle Downloader - Simple",
  "version": "1.0",
  "description": "Detects and downloads YouTube subtitles (SRT) from the watch page.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube-nocookie.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download subtitles"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
